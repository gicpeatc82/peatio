<% if @ticket.errors.any? %>
  <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @ticket do |f| %>
  <div class="form-group">
    <h5><%= I18n.t('private.tickets.description') %></h5>
  </div>
  <div class="form-group">
    <%= f.label :title, I18n.t('private.tickets.title') %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, I18n.t('private.tickets.content') %>
    <%= f.text_area :content, class: "form-control", rows: 10 %>
  </div>
  <%= f.submit I18n.t('private.tickets.submit'), class: "btn btn-primary"%>
  <%= f.button I18n.t('private.tickets.cancel'), type: :reset, class: "btn btn-default" %>

  </div>

<% end %>
